{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules", "dist"],
}
