{
  "name": "nucleus-ui-builder",
  "version": "0.0.2",
  "license": "MIT",
  "packageManager": "yarn@4.6.0",
  "main": "dist/cjs/lib/index.js",
  "module": "dist/esm/lib/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/esm/lib/index.js",
    "require": "./dist/cjs/lib/index.js"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.5",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.5",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "node-notifier": "^10.0.1",
    "prettier": "^3.5.2",
    "ts-jest": "^29.2.6",
    "ts-jest-mock-import-meta": "^1.2.1",
    "typescript-eslint": "^8.25.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "node ./dist/cjs/lib/bootstrap/bootstrap.config.js",
    "build": "yarn build:swc && yarn build:types",
    "build:swc": "yarn build:esm && yarn build:cjs",
    "build:esm": "swc lib -d dist/esm --config-file .swcrc-esm --ignore lib/**/*.test.ts",
    "build:cjs": "swc ./lib -d dist/cjs --config-file .swcrc --ignore ./**/*.test.ts",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types"
  },
  "bin": "./dist/cjs/lib/index.js",
  "keywords": [
    "ui-kit",
    "design-system",
    "component-library",
    "frontend",
    "react-components",
    "ui-framework",
    "typescript",
    "yargs-cli",
    "scaffolding",
    "boilerplate",
    "code-generator",
    "cli-tool",
    "developer-tools",
    "open-source",
    "modern-ui",
    "nucleus",
    "nextjs",
    "react",
    "vue",
    "quasar",
    "javascript"
  ]
}
